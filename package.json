{
  "devDependencies": {
    "electron": "^32.0.2",
    "electron-builder": "^24.13.3"
  },
  "name": "music-wall",
  "version": "1.0.0",
  "main": "main.js",
  "icon": "favicon.ico",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.adamakos.musicwall",
    "productName": "Music Wall",
    "files": [
      "**/*",
      "node_modules/**/*",
      "!**/.git/**/*",
      "!.gitignore"
    ],
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true
    },
    "directories": {
      "buildResources": "resources"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}