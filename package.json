{
  "devDependencies": {
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3"
  },
  "name": "music-wall",
  "version": "0.1.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": 
  {
    "appId": "com.adamakos.musicwall",
    "productName": "Music Wall",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!**/.git/**/*" 
    ],
    "nsis": {
      "oneClick": true, 
      "allowToChangeInstallationDirectory": true,
      "perMachine": true
    },
    "directories": {
      "buildResources": "resources"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}

